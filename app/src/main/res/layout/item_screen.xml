<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/ll_item"
    android:background="@color/c_ffffff">


    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="距离"
        android:layout_marginLeft="@dimen/dp_25"
        android:textColor="#ff262626"
        android:textSize="14sp"
        />

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:background="#FFF6F3F7"
        >

        <RelativeLayout
            android:id="@+id/rl_one"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_FFD52E21"
                android:maxLength="5"
                android:singleLine="true"
                android:text="省份"
                android:layout_centerVertical="true"
                />

            <View
                android:id="@+id/line_one"
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_one"
                android:background="@color/c_FFD52E21"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_10"

                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_FF595959"
                android:layout_centerVertical="true"
                android:maxLength="5"
                android:singleLine="true"
                android:text="城市"
                />

            <View
                android:id="@+id/line_two"
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_two"
                android:background="@color/c_FFD52E21"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_10"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_thee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/tv_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_FF595959"
                android:layout_centerVertical="true"
                android:maxLength="5"
                android:singleLine="true"
                android:text="区县"
                />

            <View
                android:id="@+id/line_three"
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_three"
                android:background="@color/c_FFD52E21"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_10"
                android:visibility="gone"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/tv_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_FF595959"
                android:layout_centerVertical="true"
                android:maxLength="5"
                android:singleLine="true"
                android:text="乡镇"
                />

            <View
                android:id="@+id/line_four"
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:background="@color/c_FFD52E21"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_below="@+id/tv_four"
                android:layout_marginTop="@dimen/dp_8"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_FFD52E21"
            android:gravity="right"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_27"
            android:maxLength="3"
            android:text="确定"
            />
    </LinearLayout>



    <com.oldwang.boxdemo.view.AutoMeasureHeightGridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_15"
        android:listSelector="@color/transparent"
        android:layout_height="wrap_content"
        android:numColumns="3"

        ></com.oldwang.boxdemo.view.AutoMeasureHeightGridView>

</LinearLayout>
