<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/c_ffffff"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:paddingRight="@dimen/dp_16">

        <com.oldwang.boxdemo.view.CircleImageView
            android:id="@+id/heand_image"
            android:layout_width="@dimen/dp_43"
            android:layout_height="@dimen/dp_43"
            android:layout_centerVertical="true"
            android:src="@mipmap/mrtx"
            />

        <TextView
            android:id="@+id/nick_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:textColor="#262626"
            android:layout_toRightOf="@+id/heand_image"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_marginRight="@dimen/dp_10"
            android:lines="1"
            android:layout_toLeftOf="@+id/notice_image"
            android:ellipsize="end"/>

        <ImageView
            android:id="@+id/notice_image"
            android:layout_width="@dimen/dp_26"
            android:layout_height="wrap_content"
            android:src="@mipmap/user_image_notice"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_7"
            android:layout_centerVertical="true"

            />

        <TextView
            android:id="@+id/tv_msg_count"
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_13"
            android:gravity="center"
            android:background="@drawable/user_notice_shape"
            android:textSize="8sp"
            android:textColor="@color/c_ffffff"
            android:layout_marginTop="@dimen/dp_5"
            android:visibility="gone"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_18"
        android:background="@mipmap/user_image_titleback"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/layout_collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1">

            <ImageView
                android:layout_width="@dimen/dp_23"
                android:layout_height="wrap_content"
                android:src="@mipmap/user_image_collection"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_ffffff"
                android:text="我的收藏"
                android:layout_marginTop="@dimen/dp_10"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_addmessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1">

            <ImageView
                android:layout_width="@dimen/dp_23"
                android:layout_height="wrap_content"
                android:src="@mipmap/user_image_addmessage"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_ffffff"
                android:text="我的发布"
                android:layout_marginTop="@dimen/dp_10"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_yuyue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1">

            <ImageView
                android:layout_width="@dimen/dp_23"
                android:layout_height="wrap_content"
                android:src="@mipmap/user_image_yuyue"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_ffffff"
                android:text="我的预约"
                android:layout_marginTop="@dimen/dp_10"/>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_coupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_26"
        android:layout_marginBottom="@dimen/dp_23"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/user_image_coupon"/>
            
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:textColor="#090909"
                android:layout_marginTop="@dimen/dp_10"
                android:text="优惠券"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_mywellat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/user_image_money"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:textColor="#090909"
                android:layout_marginTop="@dimen/dp_10"
                android:text="我的钱包"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_myorderlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/user_image_myorderlist"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:textColor="#090909"
                android:layout_marginTop="@dimen/dp_10"
                android:text="我的订单"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_userinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/user_image_usermessage"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:textColor="#090909"
                android:layout_marginTop="@dimen/dp_10"
                android:text="个人资料"/>

        </LinearLayout>




    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#F4F4F4"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/layout_addressmanagment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="@dimen/dp_14"
            android:paddingLeft="@dimen/dp_14"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/user_image_path"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_7"
                android:textSize="@dimen/sp_16"
                android:textColor="#262626"
                android:textStyle="bold"
                android:text="地址管理"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/user_image_jinatou"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_callCustomeractivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="@dimen/dp_14"
            android:paddingLeft="@dimen/dp_14"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/user_image_customer"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_7"
                android:textSize="@dimen/sp_16"
                android:textColor="#262626"
                android:textStyle="bold"
                android:text="联系客服"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/user_image_jinatou"/>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/layout_basecheckin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="@dimen/dp_14"
            android:paddingLeft="@dimen/dp_14"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/user_image_cgrz"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_7"
                android:textSize="@dimen/sp_16"
                android:textColor="#262626"
                android:textStyle="bold"
                android:text="基地入驻"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/user_image_jinatou"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_seting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="@dimen/dp_14"
            android:paddingLeft="@dimen/dp_14"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/user_image_seting"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_7"
                android:textSize="@dimen/sp_16"
                android:textColor="#262626"
                android:textStyle="bold"
                android:text="设置"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/user_image_jinatou"/>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>
