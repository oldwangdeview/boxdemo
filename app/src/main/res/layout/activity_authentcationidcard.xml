<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    android:orientation="vertical">
    <include layout="@layout/layout_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#f4f4f4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/layout_view1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dp_10"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp_20"
                        android:paddingBottom="@dimen/dp_20"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_14"
                        android:paddingRight="@dimen/dp_14"
                        android:background="@color/c_ffffff"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="真实姓名"
                            android:textSize="@dimen/sp_16"
                            android:textColor="#262626"
                            />

                        <EditText
                            android:id="@+id/user_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="请输入真实姓名"
                            android:textColor="#262626"
                            android:textColorHint="#B3B3B3"
                            android:gravity="right"
                            android:textSize="@dimen/sp_16"
                            android:background="@null"
                            />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#E8E8ED"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/c_ffffff"
                    android:orientation="vertical"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp_20"
                        android:paddingBottom="@dimen/dp_20"
                        android:paddingLeft="@dimen/dp_14"
                        android:paddingRight="@dimen/dp_14"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="身份证号"
                            android:textSize="@dimen/sp_16"
                            android:textColor="#262626"
                            />

                        <EditText
                            android:id="@+id/user_basename"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="请输入身份证号"
                            android:textColor="#262626"
                            android:textColorHint="#B3B3B3"
                            android:gravity="right"
                            android:textSize="@dimen/sp_16"
                            android:background="@null"
                            />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#E8E8ED"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_28"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#595959"
                    android:text="上传身份证照片"/>




                <ImageView
                    android:id="@+id/image_idcardz"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_198"
                    android:layout_marginLeft="@dimen/dp_28"
                    android:layout_marginRight="@dimen/dp_28"
                    android:layout_marginTop="@dimen/dp_15"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/basecheckin_image_idcarz"/>



                <ImageView
                    android:id="@+id/image_idcardf"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_198"
                    android:layout_marginLeft="@dimen/dp_28"
                    android:layout_marginRight="@dimen/dp_28"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="@dimen/dp_15"
                    android:src="@mipmap/basecheckin_image_idcarf"/>


                <Button
                    android:id="@+id/btn_sumbit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:text="提交审核"
                    android:textColor="@color/c_ffffff"
                    android:background="@drawable/address_addpath_btnshape"
                    android:layout_marginTop="@dimen/dp_40"
                    android:layout_marginBottom="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_14"
                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/dp_54"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_119"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/authentcationidcard_image_tj"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="审核已提交，请耐心等等！"
                    android:layout_marginTop="@dimen/dp_27"
                    android:textSize="@dimen/sp_18"
                    android:textColor="#232326"
                    android:layout_marginLeft="@dimen/dp_15"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_view3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/dp_54"
                android:visibility="gone"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_119"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/authentcationidcard_image_tg"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="审核已通过"
                    android:layout_marginTop="@dimen/dp_27"
                    android:textSize="@dimen/sp_18"
                    android:textColor="#232326"
                    android:layout_marginLeft="@dimen/dp_15"/>

            </LinearLayout>





        </LinearLayout>
    </ScrollView>

</LinearLayout>
