<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f4f4f4"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_125"
            android:background="#D42E21"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_35"
                android:paddingRight="@dimen/dp_14"
                android:gravity="center_vertical">


                <ImageView
                    android:id="@+id/image_retuen"
                    android:layout_width="34dp"
                    android:layout_height="@dimen/dp_34"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/fanhui"/>


                <ImageView
                    android:id="@+id/iv_image"
                    android:layout_width="@dimen/dp_34"
                    android:layout_height="@dimen/dp_34"
                    android:src="@mipmap/buffer"
                    android:layout_marginLeft="@dimen/dp_15"/>

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/c_ffffff"
                    android:textSize="@dimen/sp_18"

                    />

                <View
                    android:layout_width="1px"
                    android:layout_height="@dimen/dp_15"
                    android:background="@color/c_ffffff"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"/>


                <TextView
                    android:id="@+id/tv_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/c_ffffff"
                    android:text="联系商家"/>



            </LinearLayout>

        </LinearLayout>

        <com.dd.ShadowLayout
            android:id="@+id/shadowLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_85"
            android:layout_marginLeft="@dimen/dp_14"
            app:sl_shadowColor="#803F51B5"
            app:sl_shadowRadius="6dp"
            android:layout_marginRight="@dimen/dp_14">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_72"
                android:background="@drawable/orderdetail_top_back_shape"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:visibility="gone"
                    android:src="@mipmap/buffer"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_express_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#232326"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_marginRight="@dimen/dp_24"

                    />

                <TextView
                    android:id="@+id/tv_express_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_24"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_10"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/c_8C8C8C"/>
                </LinearLayout>


            </LinearLayout>

        </com.dd.ShadowLayout>

    </RelativeLayout>


    <com.dd.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_14"
        app:sl_shadowColor="#803F51B5"
        app:sl_shadowRadius="6dp"
        android:layout_marginRight="@dimen/dp_14">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/orderdetail_top_back_shape"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>




        </LinearLayout>

    </com.dd.ShadowLayout>



</LinearLayout>
