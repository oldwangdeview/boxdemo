<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    android:orientation="vertical">
    <include layout="@layout/layout_title"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#f4f4f4"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_14">

        <TextView
            android:id="@+id/comment_btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/dp_7"
            android:paddingBottom="@dimen/dp_7"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_ffffff"
            android:layout_marginRight="@dimen/dp_14"
            android:text="全部(0)"
            android:background="@drawable/goodsdetail_pinlun_choice"/>

        <TextView
            android:id="@+id/comment_btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/dp_7"
            android:paddingBottom="@dimen/dp_7"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_383838"
            android:layout_marginRight="@dimen/dp_14"
            android:text="好评(0)"
            android:background="@drawable/goodsdetail_pinliun_unchoice"/>


        <TextView
            android:id="@+id/comment_btn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/dp_7"
            android:paddingBottom="@dimen/dp_7"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_383838"
            android:layout_marginRight="@dimen/dp_14"
            android:text="中评(0)"
            android:background="@drawable/goodsdetail_pinliun_unchoice"/>


        <TextView
            android:id="@+id/comment_btn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/dp_7"
            android:paddingBottom="@dimen/dp_7"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_383838"
            android:layout_marginRight="@dimen/dp_14"
            android:text="差评(0)"
            android:background="@drawable/goodsdetail_pinliun_unchoice"/>


    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/viewpager"></android.support.v4.view.ViewPager>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/c_e5e5e5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_add_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="@color/c_262626"
            android:text="加入购物车"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_buy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="@color/c_ffffff"
            android:text="立即购买"
            android:background="@color/c_d52e21"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>
