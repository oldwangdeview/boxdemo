<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:paddingLeft="@dimen/dp_30"
    android:paddingRight="@dimen/dp_30">

    <TextView
        android:id="@+id/item_city_alpha"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:padding="10dp"
        android:textSize="@dimen/sp_16"
        android:textColor="#FFA6A6A6" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_city_alpha"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="horizontal">

        <com.oldwang.boxdemo.view.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/buffer" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/iv_head"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_FF262626" />

            <TextView
                android:id="@+id/item_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:singleLine="true"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_FF262626" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="二级会员数："
                android:textSize="@dimen/sp_14"
                android:textColor="#FFA6A6A6" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_14"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/c_FF262626" />

        </LinearLayout>


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFE6E6E6"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>