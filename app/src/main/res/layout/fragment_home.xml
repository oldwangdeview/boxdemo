<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/c_ffffff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:background="@color/c_ffffff">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/home_image_titlelogo"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_image_find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_22"
                android:src="@mipmap/home_image_findimage"/>

            <ImageView
                android:id="@+id/home_image_sss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_5"
                android:src="@mipmap/home_image_saoyisao"
                android:layout_marginRight="@dimen/dp_22"/>


            <RelativeLayout
                android:id="@+id/rl_notice"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_5"
                    android:src="@mipmap/home_image_notice"/>

                <TextView
                    android:id="@+id/tv_msg_count"
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="@dimen/dp_13"
                    android:gravity="center"
                    android:background="@drawable/user_notice_shape"
                    android:textSize="8sp"
                    android:textColor="@color/c_ffffff"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <com.oldwang.boxdemo.view.YRecycleview
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/myrcycleview"></com.oldwang.boxdemo.view.YRecycleview>

</LinearLayout>
