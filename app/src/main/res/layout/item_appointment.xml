<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_ffffff"
    android:paddingTop="@dimen/dp_15"
    android:paddingRight="@dimen/dp_14"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_14">
    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="@dimen/dp_73"
            android:layout_height="@dimen/dp_73"
            android:scaleType="centerCrop"
            android:src="@mipmap/buffer"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_10">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_venueName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/sp_16"
                    android:textColor="#232326"
                    android:text="武林大会拳击馆"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/type_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_FDA100"
                    android:text="商家确认中"
                    android:textSize="@dimen/sp_14"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_23"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:text="预约项目:"
                    android:textColor="#595959"/>

                <TextView
                    android:id="@+id/tv_venueProjectName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#595959"
                    android:text="拳击"
                    android:layout_marginLeft="@dimen/dp_10"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/c_595959"
                    android:text="预约时间："/>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/c_262626"
                    android:text="2019.02.18 13:30-02.18 18:30"
                    android:layout_marginLeft="@dimen/dp_5"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="right">

                <TextView
                    android:id="@+id/tv_report"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    android:gravity="center"
                    android:text="举报"
                    android:textColor="#595959"
                    android:textSize="@dimen/sp_13"
                    android:background="@drawable/appointmnet_btn_shape"
                    android:paddingLeft="@dimen/dp_25"
                    android:layout_marginRight="@dimen/dp_30"
                    android:paddingRight="@dimen/dp_25"/>

                <TextView
                    android:id="@+id/tv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    android:gravity="center"
                    android:textColor="@color/c_ffffff"
                    android:textSize="@dimen/sp_13"
                    android:paddingLeft="@dimen/dp_25"
                    android:paddingRight="@dimen/dp_25"
                    android:text="评价"
                    android:background="#D52E21"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_19"
        android:background="@color/c_e5e5e5"/>

</LinearLayout>
