<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拳联之家"
        android:textStyle="bold"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/c_ffffffff"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_32"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">



        <LinearLayout
            android:id="@+id/login_btn_loginforphone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/login_top_shape"
            android:layout_marginLeft="@dimen/dp_34"
            android:layout_marginRight="@dimen/dp_34"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/login_phone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="手机号登录"
                android:textColor="@color/c_ffffffff"
                android:textSize="@dimen/sp_16"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/loglin_bottom_shape"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/dp_34"
            android:layout_marginLeft="@dimen/dp_34"
            android:layout_marginBottom="@dimen/dp_29"
            >
            
            
            <LinearLayout
                android:id="@+id/layout_wechart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/login_wechart"/>
                
            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_29"
                android:background="@color/c_ffffffff"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:id="@+id/layout_qq"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/login_qq"/>

            </LinearLayout>
            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp_25"
            android:paddingLeft="@dimen/dp_45"

            android:paddingRight="@dimen/dp_45">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_ffffffff"
                android:text="新用户注册"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/login_jiantou"/>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_27"
            android:textColor="#A4A4A4"
            android:text="登录或注册即表示您同意《用户协议》和《隐私协议》"/>






    </LinearLayout>

</LinearLayout>
