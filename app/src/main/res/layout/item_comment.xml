<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_17"
        android:paddingBottom="@dimen/dp_17"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14"
        android:gravity="top">


        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:padding="@dimen/dp_5"
            android:id="@+id/choice_image"
            android:src="@mipmap/addresslist_unchoice"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:gravity="center_vertical">


                <com.oldwang.boxdemo.view.CircleImageView
                    android:id="@+id/iv_head"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:src="@mipmap/mrtx"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/c_383838"
                    android:layout_marginLeft="@dimen/dp_10"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                >
                <TextView
                    android:id="@+id/tv_attributeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/c_8C8C8C"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#262626"
                    />
            </LinearLayout>

            <com.oldwang.boxdemo.view.MyGridView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/c_ffffff"
                android:numColumns="3"
                android:verticalSpacing="@dimen/dp_10"
                android:id="@+id/mygridview2"
                android:layout_marginTop="@dimen/dp_10"></com.oldwang.boxdemo.view.MyGridView>

            <com.oldwang.boxdemo.view.MyGridView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/c_ffffff"
                android:numColumns="1"
                android:id="@+id/mygridview"
                android:layout_marginTop="@dimen/dp_10"></com.oldwang.boxdemo.view.MyGridView>




            <LinearLayout
                android:id="@+id/goods_detail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:visibility="gone"
                android:orientation="horizontal"
                android:background="@drawable/commnt_hh_back">

                <ImageView
                    android:id="@+id/goods_image"
                    android:layout_width="@dimen/dp_51"
                    android:layout_height="@dimen/dp_51"
                    android:src="@mipmap/buffer"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/goods_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/c_595959"
                        android:text="李宁综合格斗护具半指拳击手 沙包沙袋男女成人"/>

                    <TextView
                        android:id="@+id/goods_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/c_d52e21"
                        android:text="¥ 116"/>


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/venue_detail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:visibility="gone"
                android:orientation="horizontal"
                android:background="@drawable/commnt_hh_back">

                <ImageView
                    android:id="@+id/venue_image"
                    android:layout_width="@dimen/dp_51"
                    android:layout_height="@dimen/dp_51"
                    android:src="@mipmap/buffer"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/venue_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/c_595959"
                        android:text=""/>




                </LinearLayout>

            </LinearLayout>




            <LinearLayout
                android:id="@+id/video_detail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:visibility="gone"
                android:orientation="horizontal"
                android:background="@drawable/commnt_hh_back">

                <ImageView
                    android:id="@+id/video_image"
                    android:layout_width="@dimen/dp_51"
                    android:layout_height="@dimen/dp_51"
                    android:src="@mipmap/buffer"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/video_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/c_595959"
                        android:text=""/>




                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/news_detail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:orientation="horizontal"
                android:visibility="gone"
                android:background="@drawable/commnt_hh_back">

                    <TextView
                        android:id="@+id/news_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:textColor="@color/c_595959"
                        android:text="3243243242"/>





            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/c_e5e5e5"
        android:layout_marginLeft="@dimen/dp_15"/>

</LinearLayout>
