<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    android:orientation="vertical">
    <include layout="@layout/layout_title"/>
    <View
        android:layout_width="match_parent"
        android:background="#f4f4f4"
        android:layout_height="@dimen/dp_10"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_15"
        android:layout_gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总体评分"
            android:textColor="#ff333333"
            android:textSize="16sp"
            />
        <ImageView
            android:id="@+id/image_1"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_37"
            android:src="@mipmap/xingxing2"/>


        <ImageView
            android:id="@+id/image_2"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_7"
            android:src="@mipmap/xingxing2"/>



        <ImageView
            android:id="@+id/image_3"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_7"
            android:src="@mipmap/xingxing2"/>


        <ImageView
            android:id="@+id/image_4"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_7"
            android:src="@mipmap/xingxing2"/>


        <ImageView
            android:id="@+id/image_5"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_7"
            android:src="@mipmap/xingxing"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:background="#f4f4f4"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_height="@dimen/dp_1"/>

    <EditText
        android:id="@+id/et_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:textColorHint="#FFB1B1B6"
        android:textColor="#FFB1B1B6"
        android:hint="请输入评价内容"
        android:background="@null"
        />
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_14"
        android:text="提交"
        android:layout_marginTop="@dimen/dp_140"
        android:background="@drawable/address_addpath_btnshape"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/c_ffffff"/>


    </LinearLayout></ScrollView>

</LinearLayout>
