<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#00030303"
    >



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/dp_300"
        android:minHeight="@dimen/dp_350"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_22"
        android:paddingRight="@dimen/dp_22"
        android:background="@drawable/dialog_maincoupon_back">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/sp_19"
            android:textColor="@color/c_ffffff"
            android:layout_marginTop="@dimen/dp_22"
            android:text="恭喜您"/>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical">
            <View
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_1"
                android:background="#FFB6A5"/>

            <TextView
                android:id="@+id/tv_coupon_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:textSize="@dimen/sp_13"
                android:textColor="#FFB6A5"
                android:text="获得2张优惠券"/>

            <View
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_1"
                android:background="#FFB6A5"/>
        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:minHeight="@dimen/dp_160"
            android:background="#00000000"
            android:layout_marginBottom="@dimen/dp_13"></android.support.v7.widget.RecyclerView>




        <Button
            android:id="@+id/btn_returnmain"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:minWidth="@dimen/dp_130"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_12"
            android:textColor="#E52B00"
            android:text="返回首页"
            android:background="@drawable/dialog_maincoupon_btn"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/colose_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/dialog_delete"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"/>

</LinearLayout>
