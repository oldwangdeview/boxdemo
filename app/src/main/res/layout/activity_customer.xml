<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#f4f4f4"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/layout_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_33"
        android:paddingBottom="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/c_ffffff"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <ImageView
            android:layout_width="@dimen/dp_102"
            android:layout_height="wrap_content"
            android:src="@mipmap/customer_image1"/>


        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="#232326"
            android:layout_marginTop="@dimen/dp_20"
            android:autoLink="phone"
            android:linksClickable="true"

            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_33"
        android:paddingBottom="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/c_ffffff"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <ImageView
            android:layout_width="@dimen/dp_102"
            android:layout_height="wrap_content"
            android:src="@mipmap/customer_image2"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="#232326"
            android:text="在线咨询：立即在线咨询客服"
            android:layout_marginTop="@dimen/dp_20"

            />


    </LinearLayout>


</LinearLayout>
