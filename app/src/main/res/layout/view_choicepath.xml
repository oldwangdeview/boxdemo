<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_35"
    android:background="@color/c_ffffff"
    >


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_24"
        android:paddingBottom="@dimen/dp_10"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/text_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_262626"
            android:text="距离"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/choicepath_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:background="#F6F3F7"
        android:visibility="gone"

        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/c_d52e21"
                android:text="省份"
                />

            <View
                android:id="@+id/view1"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_1"
                android:background="@color/c_d52e21"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginTop="@dimen/dp_5"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/c_595959"
                android:text="城市"
                />

            <View
                android:id="@+id/view2"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_1"
                android:background="@color/c_d52e21"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginTop="@dimen/dp_5"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/c_595959"
                android:text="区县"
                />

            <View
                android:id="@+id/view3"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_1"
                android:background="@color/c_d52e21"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginTop="@dimen/dp_5"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/c_595959"
                android:text="乡镇"
                />

            <View
                android:id="@+id/view4"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_1"
                android:background="@color/c_d52e21"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginTop="@dimen/dp_5"/>
        </LinearLayout>

    </LinearLayout>

    <com.oldwang.boxdemo.view.MyGridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mygridview1"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14"
        android:numColumns="3"></com.oldwang.boxdemo.view.MyGridView>


