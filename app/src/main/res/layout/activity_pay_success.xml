<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/c_ffffff">
    <include layout="@layout/layout_title"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#f4f4f4"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/pay_success_icon"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_65"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_23"
                android:text="订单支付成功"
                android:layout_gravity="center_horizontal"
                android:textColor="#ff232326"
                android:textSize="18sp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_23"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单金额   "
                    android:textColor="#ff525259"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFD52D20"
                    android:textSize="14sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:layout_marginLeft="@dimen/dp_48"
                android:layout_marginRight="@dimen/dp_48"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_48"
                >
                <TextView
                    android:id="@+id/tv_look_order"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="查看订单"
                    android:textColor="#FF45454C"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@drawable/pay_success_shape"
                    android:gravity="center"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/tv_back_hone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="返回首页"
                    android:background="@drawable/pay_success_shape"
                    android:textColor="#FF45454C"
                    android:textSize="14sp"
                    />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
