<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/c_ffffff">
    <include layout="@layout/layout_title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginLeft="@dimen/dp_35"
        android:text="重置密码"
        android:textSize="@dimen/sp_23"
        android:textColor="#262626"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_34"

            android:paddingRight="@dimen/dp_34"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/input_newpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/c_383838"
                    android:hint="请输入新密码"
                    android:textColorHint="#C7C7CC"
                    android:inputType="textPassword"/>

                <ImageView
                    android:id="@+id/repele_imageseepass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_5"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/mimakejian"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#E8E8ED"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_34"
            android:layout_marginTop="@dimen/dp_22"
            android:paddingRight="@dimen/dp_34"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/input_aginpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/c_383838"
                    android:hint="请确认新密码"
                    android:textColorHint="#C7C7CC"
                    android:inputType="textPassword"/>

                <ImageView
                    android:id="@+id/imageseepass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_5"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/mimakejian"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#E8E8ED"/>

        </LinearLayout>


        <TextView
            android:id="@+id/ojbk_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_marginRight="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_77"
            android:gravity="center"
            android:text="确认重置"
            android:textColor="@color/c_ffffff"
            android:textSize="@dimen/sp_16"
            android:background="@drawable/login_phone_btnshape"/>
    </LinearLayout>


</LinearLayout>
