<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dp_17"
        android:paddingBottom="@dimen/dp_17"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14">
        <ImageView
            android:id="@+id/choice_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/addresslist_unchoice"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_usernameandphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/c_262626"
                    android:text="王桑  18209823456"/>

                <TextView
                    android:id="@+id/morendata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textSize="@dimen/sp_11"
                    android:textColor="@color/c_ffffff"
                    android:padding="@dimen/dp_2"
                    android:text=" 默认 "
                    android:background="@color/c_FDA100"/>
            </LinearLayout>

            <TextView
                android:id="@+id/pathdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="#595959"
                android:text="四川省成都市高新西区天辰路88号(电子科 学西区科技园)"
                android:layout_marginTop="@dimen/dp_15"/>

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="@dimen/dp_30"
            android:background="@color/c_e5e5e5"/>

        <TextView
            android:id="@+id/bianji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_14"
            android:text="编辑"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_8C8C8C"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/c_e5e5e5"
        android:layout_marginLeft="@dimen/dp_15"/>


</LinearLayout>
