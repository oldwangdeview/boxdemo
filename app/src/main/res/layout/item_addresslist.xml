<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_ffffff"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#F4F4F4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_19"
        android:paddingBottom="@dimen/dp_18"
        android:background="@color/c_ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_14"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/dp_14"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="#262626"
                />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="#262626"
                android:layout_marginLeft="@dimen/dp_24"/>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="#8C8C8C"
            android:textSize="@dimen/sp_14"
            android:text="四川省成都市高新西区天辰路88号"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/c_e5e5e5"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginBottom="@dimen/dp_14"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/choice_morenlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dp_14"
                android:gravity="left">

                <ImageView
                    android:id="@+id/choice_image"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/addresslist_unchoice"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="默认地址"
                    android:textColor="#8C8C8C"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginLeft="@dimen/dp_10"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_uotdae"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/addresslist_update"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#595959"
                    android:text="编辑"
                    android:layout_marginLeft="@dimen/dp_10"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_14"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/addresslist_delete"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#595959"
                    android:text="删除"
                    android:layout_marginLeft="@dimen/dp_10"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
