<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/c_ffffff">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">
        <ImageView
            android:id="@+id/iv_back_activity_basepersoninfo"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:padding="@dimen/dp_13"
            android:layout_centerVertical="true"
            android:src="@mipmap/fh" />

        <TextView
            android:id="@+id/tv_title_activity_baseperson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/c_ff383838"
            android:textSize="@dimen/sp_18"
            android:text="武动拳民"
            />

        <ImageView

            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:id="@+id/add_image"
            android:src="@mipmap/boxvideo_addimage"
            android:padding="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/find_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:src="@mipmap/boxvideo_findimage"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:visibility="gone"
            android:layout_toLeftOf="@+id/add_image"/>

    </RelativeLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_14"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_16"
            android:paddingRight="@dimen/dp_14">

            <com.oldwang.boxdemo.view.CircleImageView
                android:id="@+id/iv_head"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/mrtx"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_262626"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                android:maxLength="15"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/tv_attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/c_8C8C8C"
                android:layout_marginLeft="@dimen/dp_10"
                android:text=" 已关注"
                />
        </LinearLayout>




    <com.oldwang.boxdemo.view.YRecycleview
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerview">

    </com.oldwang.boxdemo.view.YRecycleview>


</LinearLayout>
