<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f4f4f4">
    <include layout="@layout/layout_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_20"
        android:background="@color/c_ffffff">

        <LinearLayout
            android:id="@+id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_d52e21"
                />
            <View
                android:id="@+id/view1"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_1"
                android:background="@color/c_d52e21"
                android:layout_marginTop="@dimen/dp_10"/>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_595959"
                />
            <View
                android:id="@+id/view2"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_1"
                android:background="@color/c_d52e21"
                android:visibility="invisible"
                android:layout_marginTop="@dimen/dp_10"/>

        </LinearLayout>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mviewpager"
        android:layout_weight="1"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:paddingRight="@dimen/dp_14"
        android:paddingLeft="@dimen/dp_14"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#f1f1f1">

        <LinearLayout
            android:id="@+id/choice_adddata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/choice_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/addresslist_unchoice"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全选"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/c_595959"
                android:layout_marginLeft="@dimen/dp_10"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">
            <Button
                android:id="@+id/delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:background="#D52E21"
                android:textSize="@dimen/sp_14"
                android:text="删除"
                android:textColor="@color/c_ffffff"/>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>
